# Code Report Configuration
# Copy this file to .env and modify the values as needed

# OpenAI API Configuration
# Your OpenAI API key (required for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# ChatGPT model to use (gpt-3.5-turbo, gpt-4, etc.)
OPENAI_MODEL=gpt-3.5-turbo

# Temperature for ChatGPT responses (0.0 to 2.0)
# Lower values = more focused, Higher values = more creative
OPENAI_TEMPERATURE=0.8

# OpenAI API base URL (usually don't need to change)
OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions

# Project Configuration
# Project root directory (default: current directory)
PROJECT_ROOT=.

# Output file for the generated report
OUTPUT_FILE=codeql-analysis-report.md

# Report Configuration
# Report level: easy, medium, advanced
REPORT_LEVEL=medium

# Include code correction suggestions in the report
INCLUDE_FIXES=false

# Performance Configuration
# Maximum file size in bytes for processing
MAX_FILE_BYTES=350000

# Maximum payload tokens for API requests
MAX_PAYLOAD_TOKENS=120000

# Target tokens per chunk for processing
CHUNK_TARGET_TOKENS=3000

# Rate limit requests per second
RATE_LIMIT_RPS=30

# Timeout in seconds for API requests
TIMEOUT_SECONDS=120

# Logging Configuration
LOG_LEVEL=info
